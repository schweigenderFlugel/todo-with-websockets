<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="styles.css">
  </head>
  <main>
    <h1>{{title}}</h1>
    <ul>
      {{#each routes}}
      <li class="list">
        <section class="description">
          <div class="path">
            <h3 style="color: white;">{{name}}</h3>
            <h3 style="color: white;">Path</h3>
            <div>
              <strong style="
                {{#if (eq method "GET") }} color: blue; 
                {{else if (eq method "POST")}} color: green;
                {{else if (eq method "PUT")}} color: orange;
                {{else if (eq method "DELETE")}} color: red;
                {{/if}}
              ">{{method}}</strong>
              <code>{{path}}</code>
            </div>
          </div>
          <div>
            <h4 style="color: white; margin-right: 10px; text-decoration: underline;">Description:</h4>
            <p style="color: white;">{{description}}</p>
          </div>
          {{#if dto}}
          <h2 style="color: white;">Schema</h2>
          <div class="schema">
            <ul class="code">
              {{#each dto.properties}}
              <code>
                <p class="property">{{property}}: <span style="color: rgb(197, 86, 42);">[</span></p>
                {{#each validators}}
                  <p class="validators">"{{this}}", </p>
                {{/each}}
                <p style="color: rgb(197, 86, 42); margin-bottom: 20px;">]</p>
              </code>
              {{/each}}
            </ul>
          </div>
          {{/if}}
          {{#if response}}
          <h2 style="color: white;">Response</h2>
          <div class="model">
            <ul>
              <code>{{response}}</code>
            </ul>
          </div>
          {{/if}}
        </section>
      </li>
      {{/each}}
    </ul>
  </main>
</html>